generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["strictUndefinedChecks"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Notificacao {
  id            String   @id
  assunto       String
  conteudo      String   @db.Text
  icone         String?
  context       String?
  login         String
  pendente      Boolean
  sonoro        Boolean
  identificacao String
  urlDestino    String?  @map("url_destino") @db.Text
  criacao       DateTime @default(now())
  ativa         Boolean  @default(true)
  subtitulo     String?
  mobile        Boolean?  @default(false)
  lidaEm        DateTime? @map("lida_em")
  excluidaEm    DateTime? @map("excluida_em")

  @@map("notificacao")
}

model Parametro {
  id       Int    @id @default(autoincrement())
  contexto String
  chave    String
  valor    String @db.Text

  @@map("parametro")
}
